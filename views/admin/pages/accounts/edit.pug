extend ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    if(role.permissions.includes("accounts_edit"))
        h1(class="mb-4") Chỉnh sửa acc
        +alert-error(5000)
        +alert-success(5000)
        form(
            action=`${prefixAdmin}/accounts/edit/${data._id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Tên
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    value=data.fullName
                    required
                )
            div(class="form-group")
                label(for="email") Email
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    value=data.email
                    required
                )
            div(class="form-group")
                label(for="password") Mật khẩu
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    require
                )
            div(class="form-group")
                label(for="phone") SĐT
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=data.phone
                )
            div(
                class="form-group"
                upload-image
            )
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=data.avatar
                    upload-image-preview
                    class="image-preview"
                )
            div(class="form-group")
                label(for="role_id") Phân quyền
                select(name="role_id" id="role_id" class="form-control")
                    option(disable) --Chọn--
                    each item in roles
                        option(
                            value=item.id
                            selected=(item.id== data.role_id ? true: false)
                        
                        ) #{item.title}

            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(data.status==="active" ? true: false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(data.status==="inactive" ? true: false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động                
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật